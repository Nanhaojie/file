FROM python:3.6

WORKDIR /opt/wjgl-master

COPY ./ /opt/
RUN pip3 install -r /opt/wjgl-master/requirements.txt -i https://mirrors.aliyun.com/pypi/simple

EXPOSE 8000
ENTRYPOINT ["python", "manage.py"]
CMD ["runserver", "0.0.0.0:8000"]

# Uncomment to use Gunicorn
# ENV GUNICORN_CMD_ARGS="--bind=0.0.0.0 --workers=3 --reload"
# CMD ["gunicorn", "api.wsgi"]

